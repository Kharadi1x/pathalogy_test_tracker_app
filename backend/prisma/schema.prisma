generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  PATIENT
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  role      Role     @default(PATIENT)
  password  String
  tfaSecret String?  // for TOTP 2FA (optional)
  createdAt DateTime @default(now())
  auditLogs AuditLog[]
}

model Patient {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  tests     Test[]
}

model Lab {
  id    Int    @id @default(autoincrement())
  name  String
  tests Test[]
}

model Test {
  id            Int      @id @default(autoincrement())
  testName      String
  result        String
  referenceRange String
  dateOfTest    DateTime
  patientId     Int
  labId         Int?
  patient       Patient  @relation(fields: [patientId], references: [id])
  lab           Lab?     @relation(fields: [labId], references: [id])
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  userId    Int?
  user      User?    @relation(fields: [userId], references: [id])
  action    String
  details   String?
  createdAt DateTime @default(now())
}
